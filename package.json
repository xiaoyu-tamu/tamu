{
  "scripts": {
    "dev": "nodemon server/index.ts",
    "start": "NODE_ENV=production node server/.next/server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "next build client",
    "build:server": "tsc --p server/tsconfig.json",
    "test": "jest --watch",
    "test:client": "jest --config ./client/jest.config.js --watch",
    "test:server": "jest --config ./server/jest.config.js --watch"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.42",
    "@material-ui/core": "^1.3.1",
    "@types/autobind-decorator": "^2.1.0",
    "@types/classnames": "^2.2.4",
    "@types/prop-types": "^15.5.3",
    "autobind-decorator": "^2.1.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "hoist-non-react-statics": "^2.5.5",
    "mongoose": "^5.2.1",
    "next": "^6.1.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-testing-library": "^4.1.2",
    "recharts": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@types/dotenv": "^4.0.3",
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.5",
    "@types/lodash": "^4.14.110",
    "@types/mongoose": "^5.2.0",
    "@types/next": "^6.0.4",
    "@types/react": "^16.4.6",
    "@types/styled-jsx": "^2.2.3",
    "@types/typescript": "^2.0.0",
    "@zeit/next-typescript": "1.1.0",
    "babel-loader": "^8.0.0-beta.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.3.0",
    "nodemon": "^1.17.5",
    "react-test-renderer": "^16.4.1",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.0-dev.20180707"
  },
  "nodemonConfig": {
    "watch": [
      "server/**/*.ts"
    ],
    "execMap": {
      "ts": "ts-node --compilerOptions '{\"module\":\"commonjs\"}' --project server/tsconfig.json"
    }
  }
}
